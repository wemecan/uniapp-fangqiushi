
.liaoTian-time{
	font-size: 30rpx;
	padding: 20rpx 0;
	color: #CCCCCC;
}
.liaoTian-con{
	padding:20rpx;
}
.liaoTian-con>image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	-webkit-flex-shrink: 0;
	        flex-shrink: 0;/*防止图片被压缩*/
}
.liaoTian-aa{
	position: relative;
	/* background-color: #FFFFFF; */
	border: 1rpx solid #CCCCCC;
	margin-right: 100rpx;
	border-radius: 20rpx;
	padding: 20rpx;
	margin-left: 30rpx;
}
.liaoTian-aa:after{
	position: absolute;
	top: 30rpx;
	left: -30rpx;
	right: 0;
	width: 0;
	height: 0;
	content: '';
	border: 16rpx solid #CCCCCC;
	border-color: transparent #CCCCCC transparent transparent;
}
.liaoTian-aa>text{
	position: absolute;
}
.liaoTian-con-me{
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
}
.liaoTian-con-me .liaoTian-aa{
	margin-right: 30rpx;
	margin-left: 100rpx;
	border: 1rpx solid #0A98D5;
	color: #FFFFFF;
}
.liaoTian-con-me .liaoTian-aa:after{
	left: auto;
	right: -30rpx;
	border-color: transparent transparent transparent  #007AFF ;
}
.liaoTian-aa>image{
	max-width: 200rpx;
	max-height: 200rpx;
}

